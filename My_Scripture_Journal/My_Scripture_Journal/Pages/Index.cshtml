@page
@model My_Scripture_Journal.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form>
    <p>
        <select asp-for="StandardWorks" asp-items="@(new SelectList(Model.Scriptures, "ID", "StandardWork"))">
            <option value="">All</option>
        </select>
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Scriptures[0].StandardWork)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scriptures[0].Book)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scriptures[0].Chapter)
            </th>s
            <th>
                @Html.DisplayNameFor(model => model.Scriptures[0].Verses)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scriptures[0].Note)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scriptures[0].Passage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scriptures[0].DateAdded)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Scriptures) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StandardWork)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Book)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Chapter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Verses)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Passage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateAdded)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
